<yas>
<scene root="rootNode" axis_length="5.0" />

	<views default="view_P1" >

		<perspective id="view_P1" near="1" far="5" angle="90">
			<from x="5.0" y="5.0" z="5.0" />
			<to x="0.0" y="0.0" z="0.0" />
		</perspective>

		<ortho id="view_O1" near="1" far="5"
			left="-5.0" right="5.0" top="5.0" bottom="-5.0" />
	</views>
		
	<ambient> 
		<ambient r="0.1" g="0.1" b="0.1" a="0.1" />
		<background r="1.0" g="0.0" b="0.0" a="0.5" />
	</ambient>

	<lights>

		<omni id="omni_1" enabled="0" >
			<location x="10" y="10" z="10" w="1.0" />
			<ambient r="0.0" g="0.0" b="0.0" a="0.0" />
			<diffuse r="0.0" g="0.0" b="0.0" a="0.0" />
			<specular r="0.0" g="0.0" b="0.0" a="0.0" />
		</omni>

		<spot id="spot_1" enabled="1" angle="15.0" exponent="2.0">
			<location x="-10.0" y="-10.0" z="-10.0" w="1.0" />
			<target x="0.0" y="0.0" z="0.0" />
			<ambient r="0.0" g="0.0" b="0.0" a="0.0" />
			<diffuse r="0.0" g="0.0" b="0.0" a="0.0" />
			<specular r="0.0" g="0.0" b="0.0" a="0.0" />
		</spot>

	</lights>

	<textures> 

		<texture id="text_1" file="rocks.jpg" />
		<texture id="trunk" file="trunk-image.jpg" />

	</textures>
		
	<materials> 

		<material id="mat_1" shininess ="0.5" >
			<emission r="0.0" g="0.0" b="0.0" a="0.0" />
			<ambient r="0.0" g="0.0" b="0.0" a="0.0" />
			<diffuse r="0.0" g="0.0" b="0.0" a="0.0" />
			<specular r="0.0" g="0.0" b="0.0" a="0.0" />
		</material>

	</materials>

	<transformations> 

		<transformation id="translate_y_10">
			<translate x="0.0" y="10.0" z="0.0" />
		</transformation>

		<transformation id="scale_xyz_2">
			<scale x="2.0" y="2.0" z="2.0" />
		</transformation>

	</transformations>

	<primitives> 

		<primitive id="uni_rectangle">
			<rectangle x1="0.0" y1="0.0" x2="1.0" y2="1.0" />
		</primitive >

		<primitive id="quad">
			<rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
		</primitive >

		<primitive id="uni_rec_triangle">
			<triangle x1="0.0" y1="0.0" z1="0.0" 
					x2="1.0" y2="0.0" z2="0.0" 
					x3="0.0" y3="1.0" z3="0.0" />
		</primitive >

		<primitive id="uni_cylinder">
			<cylinder base="1.0" top="1.0" height="1.0" slices="12.0" stacks="1.0" />
		</primitive >

		<primitive id="uni_sphere">
			<sphere radius="1.0" slices="12.0" stacks="12.0" />
		</primitive >

	</primitives >

	<components>

		<component id="rootNode">

			<transformation>
				<translate x="0.0" y="0.0" z="0.0" />
			</transformation>

			<materials>
					<material id="mat_1" />
			</materials>

			<texture id="text_1" length_s="1.0" length_t="1.0" /> 

			<children>
				<componentref id="scaled_triangle" />
			</children>

		</component>


		<component id="scaled_triangle">

			<transformation>

				<transformationref id="scale_xyz_2" />

			</transformation>

			<materials>
				
					<material id="mat_1" />

			</materials>

			<texture id="text_1" length_s="1.0" length_t="1.0" /> 

			<children>
				<primitiveref id="uni_rec_triangle" />
			</children>
		</component> 

		

		<component id="cube">

			<transformation>

				<translate x="0.0" y="0.0" z="0.0" />

			</transformation>

			<materials>
				
					<material id="mat_1" />

			</materials>

			<texture id="trunk" length_s="1.0" length_t="1.0" /> 

			<children>
				<componentref id="cube_face1" />
				<componentref id="cube_face2" />
				<componentref id="cube_face3" />
				<componentref id="cube_face4" />
				<componentref id="cube_face5" />
				<componentref id="cube_face6" />
			</children>
		</component> 

		<component id="cube_face1">

			<transformation>

				<translate x="0.5" y="0.0" z="0.0" />

			</transformation>

			<materials>
				
					<material id="inherit" />

			</materials>

			<texture id="inherit" length_s="1.0" length_t="1.0" /> 

			<children>
				<primitiveref id="uni_rectangle" />
			</children>
		</component> 

		<component id="cube_face2">

			<transformation>
				<rotate axis="z" angle="90.0" />
				<translate x="0.5" y="0.0" z="0.0" />

			</transformation>

			<materials>
				
				<material id="inherit" />

			</materials>

			<texture id="inherit" length_s="1.0" length_t="1.0" /> 

			<children>
				<primitiveref id="quad" />
			</children>
		</component> 

		<component id="cube_face3">

			<transformation>
				<rotate axis="z" angle="180.0" />
				<translate x="0.5" y="0.0" z="0.0" />

			</transformation>

			<materials>
				
				<material id="inherit" />

			</materials>

			<texture id="inherit" length_s="1.0" length_t="1.0" /> 

			<children>
				<primitiveref id="quad" />
			</children>
		</component> 

		<component id="cube_face4">

			<transformation>
				<rotate axis="z" angle="-90.0" />
				<translate x="0.5" y="0.0" z="0.0" />

			</transformation>

			<materials>
				
				<material id="inherit" />

			</materials>

			<texture id="inherit" length_s="1.0" length_t="1.0" /> 

			<children>
				<primitiveref id="quad" />
			</children>
		</component> 

		<component id="cube_face5">

			<transformation>
				<rotate axis="y" angle="90.0" />
				<translate x="0.5" y="0.0" z="0.0" />

			</transformation>

			<materials>
				
				<material id="inherit" />

			</materials>

			<texture id="inherit" length_s="1.0" length_t="1.0" /> 

			<children>
				<primitiveref id="quad" />
			</children>
		</component> 

		<component id="cube_face6">

			<transformation>
				<rotate axis="y" angle="-90.0" />
				<translate x="0.5" y="0.0" z="0.0" />

			</transformation>

			<materials>
				
				<material id="inherit" />

			</materials>

			<texture id="inherit" length_s="1.0" length_t="1.0" /> 

			<children>
				<primitiveref id="quad" />
			</children>
		</component> 

		
	
	</components>
	
</yas>
